      "insights": true,
      "insightsTitleTrue": {
        "en": "Climate control on"
      },
      "insightsTitleFalse": {
        "en": "Climate control off"
      },
      "uiComponent": "toggle",
      "uiQuickAction": false
    },
    "defrost": {
      "type": "boolean",
      "title": {
        "en": "Defrost"
      },
      "getable": true,
      "setable": true,
